<p id="notice"><%= notice %></p>
<p align="right" class="navbar-text pull-left">
  <% if leasing_agent_signed_in? %>
    Logged in as <strong> <%= current_leasing_agent.email %></strong>.
    <%= link_to "Sign out", destroy_leasing_agent_session_path, method: :get, :class => 'navbar-link'  %>
    <%= link_to 'Edit profile', edit_leasing_agent_registration_path,  :class => 'navbar-link' %>
  <%end %>
</p>
<% if leasing_agent_signed_in? %>
  <h1><%= current_leasing_agent.name %>'s Leasing Agents Dashboard</h1>

<%end %>

<% if leasing_agent_signed_in? %>
  <h2>Click on Show to view the applications associated with the properties</h2>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Size</th>
      <th>Features pets</th>
      <th>Features laundry</th>
      <th>Features parking</th>
      <th>Terms available</th>
      <th>Earliest start time</th>
      <th>Application fee</th>
      <th>Monthly rent</th>
      <th>Occupied by</th>
      <th>Availability</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.address %></td>
        <td><%= property.size %></td>
        <td><%= property.features_pets %></td>
        <td><%= property.features_laundry %></td>
        <td><%= property.features_parking %></td>
        <td><%= property.terms_available %></td>
        <td><%= property.earliest_start_time %></td>
        <td><%= property.application_fee %></td>
        <td><%= property.monthly_rent %></td>
        <td><%= property.occupied_by %></td>
        <td><%= property.availability %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Remove', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Property', new_property_path %>
  <%= link_to 'Back', leasing_agents_path %>
<%end %>

<br>

